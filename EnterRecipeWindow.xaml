<Window x:Class="RecipeApp.EnterRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter New Recipe" Height="400" Width="600">
    <Grid>
        <!-- Enter Recipe Form -->
        <!-- Example controls, adjust as per your actual layout -->
        <StackPanel Margin="20">
            <TextBlock Text="Recipe Name:"/>
            <TextBox x:Name="RecipeNameTextBox"/>
            <!-- Add more controls for ingredients, steps, etc. -->
            <Button Content="Save Recipe" Click="SaveRecipe_Click"/>
        </StackPanel>
    </Grid>
</Window>
