<Window x:Class="RecipeAppWPF.FilterRecipesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Filter Recipes" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Filter Recipes" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

            <TextBlock Text="Ingredient" Margin="5"/>
            <TextBox x:Name="IngredientTextBox" Margin="5"/>

            <TextBlock Text="Food Group" Margin="5"/>
            <TextBox x:Name="FoodGroupTextBox" Margin="5"/>

            <TextBlock Text="Maximum Calories" Margin="5"/>
            <TextBox x:Name="MaxCaloriesTextBox" Margin="5"/>

            <Button Content="Filter" Click="Filter_Click" Margin="10" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
