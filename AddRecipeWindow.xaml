<Window x:Class="RecipeAppWPF.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Recipe" Height="450" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter Recipe Details" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

            <TextBlock Text="Recipe Name" Margin="5"/>
            <TextBox x:Name="RecipeNameTextBox" Margin="5"/>

            <TextBlock Text="Number of Ingredients" Margin="5"/>
            <TextBox x:Name="NumIngredientsTextBox" Margin="5"/>

            <Button Content="Add Ingredient" Click="AddIngredient_Click" Margin="5"/>
            <StackPanel x:Name="IngredientsPanel" Margin="5"/>

            <TextBlock Text="Number of Steps" Margin="5"/>
            <TextBox x:Name="NumStepsTextBox" Margin="5"/>

            <Button Content="Add Step" Click="AddStep_Click" Margin="5"/>
            <StackPanel x:Name="StepsPanel" Margin="5"/>

            <Button Content="Save Recipe" Click="SaveRecipe_Click" Margin="10" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
