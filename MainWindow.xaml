<Window x:Class="RecipeAppWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RecipeApp" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Recipe App" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

            <Button Content="Add Recipe" Click="AddRecipe_Click" Margin="5"/>
            <Button Content="Display Recipes" Click="DisplayRecipes_Click" Margin="5"/>
            <Button Content="Scale Recipe" Click="ScaleRecipe_Click" Margin="5"/>
            <Button Content="Reset Recipe Quantities" Click="ResetRecipe_Click" Margin="5"/>
            <Button Content="Clear All Recipes" Click="ClearRecipes_Click" Margin="5"/>
            <Button Content="Filter Recipes" Click="FilterRecipes_Click" Margin="5"/>
            <ListBox x:Name="RecipeListBox" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
